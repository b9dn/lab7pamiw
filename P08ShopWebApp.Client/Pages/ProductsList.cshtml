@page
@model P08ShopWebApp.Client.Pages.FilmsListModel
@{
}



<p>Number of films: @Model.Films.Count()</p>

<table>

    @foreach (var item in Model.Films)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@Html.DisplayFor(x=>item.Price)</td>
        </tr>
        
    }

</table>